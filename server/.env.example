# MongoDB Connection
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/redbridge?retryWrites=true&w=majority

# AI Extraction Configuration
AI_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
USE_AI_EXTRACTION=true

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Twilio Verify Service SID
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# SendPulse Configuration (for Email)
SENDPULSE_USER_ID=your_sendpulse_user_id
SENDPULSE_SECRET=your_sendpulse_secret
SENDPULSE_TOKEN_STORAGE=./sendpulse_token_storage
EMAIL_FROM=your_email@example.com
